<style>
  body {
      background-color: #121212;
      color: #ffffff;
      font-family: 'Poppins', sans-serif;
  }

  h2 {
      color: #e0e0e0;
      text-transform: uppercase;
      letter-spacing: 2px;
      font-weight: 700;
      position: relative;
      margin-bottom: 30px;
      animation: fadeIn 1.5s ease-in-out;
  }

  h2::after {
      content: '';
      display: block;
      width: 60px;
      height: 3px;
      background-color: #ff5722;
      margin-top: 10px;
      margin-left: auto;
      margin-right: auto;
      animation: slideIn 1s ease-in-out;
  }

  .text-body-emphasis {
      color: #ff5722;
      animation: pulse 2s infinite;
  }

  .text-body-secondary {
      color: #b0bec5;
  }

  .container {
      padding: 20px;
      background-color: #1e1e1e;
      border-radius: 10px;
      box-shadow: 0 0 15px rgba(0, 0, 0, 0.6);
      margin-bottom: 40px;
      animation: fadeInUp 1.5s ease-in-out;
  }

  .feature-icon-small {
      background-color: #ff5722;
      width: 60px;
      height: 60px;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
      box-shadow: 0 0 10px rgba(255, 87, 34, 0.6);
      animation: jump 2s infinite;
  }

  .feature-icon-small svg {
      fill: #ffffff;
      width: 25px;
      height: 25px;
  }

  .feature-icon-small:hover {
      transform: translateY(-10px);
      box-shadow: 0 0 20px rgba(255, 87, 34, 0.9);
  }

  p {
      font-size: 1.1rem;
      line-height: 1.7;
      animation: fadeIn 2s ease-in-out;
  }

  a {
      color: #ff5722;
      text-decoration: none;
      transition: color 0.3s ease-in-out, text-shadow 0.3s ease-in-out;
  }

  a:hover {
      color: #ff7043;
      text-shadow: 0 0 8px rgba(255, 112, 67, 0.8);
  }

  .img-fluid {
      margin-top: 20px;
      border-radius: 10px;
      transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
      box-shadow: 0 0 15px rgba(0, 0, 0, 0.6);
  }

  .img-fluid:hover {
      transform: scale(1.1);
      box-shadow: 0 0 25px rgba(0, 0, 0, 0.9);
  }

  @media (max-width: 768px) {
      h2 {
          font-size: 1.5rem;
      }

      p {
          font-size: 1rem;
      }
  }

  /* Animations */
  @keyframes fadeIn {
      from {
          opacity: 0;
      }
      to {
          opacity: 1;
      }
  }

  @keyframes slideIn {
      from {
          width: 0;
      }
      to {
          width: 60px;
      }
  }

  @keyframes fadeInUp {
      from {
          opacity: 0;
          transform: translateY(20px);
      }
      to {
          opacity: 1;
          transform: translateY(0);
      }
  }

  @keyframes pulse {
      0%, 100% {
          opacity: 1;
      }
      50% {
          opacity: 0.7;
      }
  }

  @keyframes jump {
      0%, 20%, 50%, 80%, 100% {
          transform: translateY(0);
      }
      40% {
          transform: translateY(-20px);
      }
      60% {
          transform: translateY(-10px);
      }
  }
</style>

