<%- include("partials/header.ejs") %>
 
  <style>
body {
    background-color: #121212; 
    color: #f5f5f5; 
    font-family: 'Roboto', sans-serif;
    padding-top: 30px;
    margin: 0;
}


h2 {
    font-size: 2.5rem;
    font-weight: bold;
    color: #ffffff;
    text-align: center;
    margin-bottom: 30px;
    text-shadow: 0 0 10px rgba(255, 255, 255, 0.3);
    animation: glow 1.5s infinite alternate;
}

/* Text Glow Animation */
@keyframes glow {
    0% {
        text-shadow: 0 0 10px rgba(255, 255, 255, 0.3);
    }
    100% {
        text-shadow: 0 0 20px rgba(255, 255, 255, 0.7), 0 0 30px rgba(255, 255, 255, 0.5), 0 0 40px rgba(255, 255, 255, 0.9);
    }
}

footer {
    background-color: #1e1e1e;
    padding: 20px 0;
    text-align: center;
    color: #b0b0b0;
}

footer a {
    color: #ffffff;
    text-decoration: none;
    transition: color 0.3s;
}

footer a:hover {
    color: #1e90ff;
}


.container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 20px;
}


.text-light {
    color: #ffffff !important;
}

.bg-dark {
    background-color: #1e1e1e !important;
}

  </style>

