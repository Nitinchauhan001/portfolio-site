<style>

body {
    background-color: #121212;
    color: #f5f5f5;
    font-family: 'Arial', sans-serif;
}

.container {
    max-width: 900px;
    margin: auto;
    padding: 20px;
    border-radius: 10px;
    background-color: #1f1f1f;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    animation: fadeIn 1s ease-in-out;
}

/* Icon Styling */
.icon-container {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 60px;
    height: 60px;
    background-color: #333;
    border-radius: 50%;
    margin-bottom: 10px;
    animation: bounceIn 1s ease;
    transition: transform 0.3s ease-in-out;
}

.icon-container:hover {
    transform: translateY(-5px) scale(1.1);
}

.icon {
    color: #f5f5f5;
    font-size: 1.5rem;
}

/* Contact Info and Links */
.contact-info h5,
.social-links h5 {
    font-size: 1.2rem;
    font-weight: 600;
    margin-bottom: 0;
    position: relative;
    display: inline-block;
    text-transform: uppercase;
    color: #f5f5f5;
    overflow: hidden;
    margin-left: 15px;
    padding: 0 0.5em;
    animation: slideInLeft 1s ease-in-out;
}

.contact-info h5::after,
.social-links h5::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 2px;
    background-color: #f5f5f5;
    transition: width 0.4s ease;
}

.contact-info h5:hover::after,
.social-links h5:hover::after {
    width: 100%;
}

.contact-detail {
    color: #ff9800;
    transition: color 0.3s ease-in-out;
    animation: pulse 2s infinite;
}

.contact-detail:hover {
    color: #ff5722;
    text-decoration: none;
}

/* Text Effects */
h5 {
    animation: fadeInUp 1s ease-in-out;
}

@keyframes fadeIn {
    from {
        opacity: 0;
    }
    to {
        opacity: 1;
    }
}

@keyframes bounceIn {
    0%, 20%, 40%, 60%, 80%, 100% {
        transform: translateY(0);
    }
    30% {
        transform: translateY(-15px);
    }
    50% {
        transform: translateY(-10px);
    }
    70% {
        transform: translateY(-5px);
    }
}

@keyframes slideInLeft {
    from {
        transform: translateX(-100%);
        opacity: 0;
    }
    to {
        transform: translateX(0);
        opacity: 1;
    }
}

@keyframes pulse {
    0% {
        transform: scale(1);
    }
    50% {
        transform: scale(1.05);
    }
    100% {
        transform: scale(1);
    }
}

@keyframes fadeInUp {
    from {
        transform: translateY(20px);
        opacity: 0;
    }
    to {
        transform: translateY(0);
        opacity: 1;
    }
}

/* Responsive Design */
@media (max-width: 768px) {
    .container {
        padding: 15px;
    }

    .icon-container {
        width: 50px;
        height: 50px;
    }

    .icon {
        font-size: 1.2rem;
    }

    .contact-info h5,
    .social-links h5 {
        font-size: 1rem;
    }
}

</style>

